---
// src/layout/Layout.astro
import Head from "@/layouts/Head.astro";
import Header from "@/components/Header.astro";
import Navbar from "@/components/Navbar.astro";
import themeConfig from "@/config";
import "../styles/global.css";
import "../styles/markdown.css";
import "../styles/ext.css";
import ToggleButton from "@/components/ToggleButton.astro";

interface Props {
  articleTitle?: string;
  articleDescription?: string;
  articleSlug?: string;
  supportedLangs?: string[];
}

const { articleTitle, articleDescription } = Astro.props;
const { author } = themeConfig.site;
---

<!doctype html>
<html lang="zh-cn">
  <Head articleTitle={articleTitle} articleDescription={articleDescription} />
  <body>
    <div
      class="max-w-360 mx-auto px-6 lg:grid lg:grid-cols-[320px_1fr] lg:gap-x-16"
    >
      <aside class="min-w-0">
        <div class="lg:sticky lg:top-10 wrap-break-word">
          <Header />
          <Navbar />
          <div class="mt-4">
            <ToggleButton />
          </div>
        </div>
      </aside>

      <main class="py-8">
        <div class="content-wrapper">
          <article class="markdown">
            <slot />
          </article>
          <footer class="mt-12 pt-8 border-t border-gray-200">
            <p>
              &copy; {new Date().getFullYear()}
              {author} - All rights reserved. Released under <a
                href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
                rel="canonical">CC BY-NC-SA 4.0</a
              >.
            </p>
          </footer>
        </div>
      </main>
    </div>
  </body>
</html>

<script>
  const COPY_ICON = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="2"><path stroke-linejoin="round" d="M15.5 4H18a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2.5"></path><path stroke-linejoin="round" d="M8.621 3.515A2 2 0 0 1 10.561 2h2.877a2 2 0 0 1 1.94 1.515L16 6H8z"></path><path d="M9 12h6m-6 4h6"></path></g></svg>`;

  const CHECK_ICON = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m9.55 18l-5.7-5.7l1.425-1.425L9.55 15.15l9.175-9.175L20.15 7.4z"></path></svg>`;

  const initCopyButtons = () => {
    document
      .querySelectorAll("pre:not(.code-block-wrapper pre)")
      .forEach((pre) => {
        if (!pre.parentNode) return;

        const wrapper = document.createElement("div");
        wrapper.className = "code-block-wrapper";
        wrapper.style.position = "relative";

        pre.parentNode.insertBefore(wrapper, pre);
        wrapper.appendChild(pre);

        const button = document.createElement("button");
        button.className = "copy-code-btn";
        button.type = "button";
        button.ariaLabel = "Copy code";
        button.innerHTML = COPY_ICON;

        button.addEventListener("click", async () => {
          const code = (pre.querySelector("code") || pre).textContent;
          try {
            await navigator.clipboard.writeText(code);
            button.innerHTML = CHECK_ICON;
            button.classList.add("success");
            setTimeout(() => {
              button.innerHTML = COPY_ICON;
              button.classList.remove("success");
            }, 2000);
          } catch (err) {
            console.error("Copy failed:", err);
          }
        });

        wrapper.appendChild(button);
      });
  };

  document.addEventListener("DOMContentLoaded", initCopyButtons);
  document.addEventListener("astro:page-load", initCopyButtons);
</script>

<style is:global>
  /* 包装器 */
  .code-block-wrapper {
    /* 与原有的 pre 保持一定的外边距，视你的主题而定 */
    margin-bottom: 1em;
    margin-top: 1em;
  }

  /* 按钮样式 */
  .copy-code-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    z-index: 20; /* 确保在代码上方 */

    display: flex;
    justify-content: center;
    align-items: center;

    width: 2rem;
    height: 2rem;
    padding: 0;

    font-size: 0.875rem;
    color: #94a3b8; /* 默认灰色 */
    background-color: rgba(30, 41, 59, 0.6); /* 深色背景透明 */
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.375rem;

    cursor: pointer;
    opacity: 0; /* 默认隐藏 */
    transition: all 0.2s;
    user-select: none; /* 防止选中文本核心 */
  }

  /* 悬停在整个 wrapper 时显示按钮 */
  .code-block-wrapper:hover .copy-code-btn {
    opacity: 1;
  }

  /* 移动端永远显示，因为没有 hover */
  @media (hover: none) {
    .copy-code-btn {
      opacity: 1;
    }
  }

  /* 按钮悬停态 */
  .copy-code-btn:hover {
    background-color: rgba(30, 41, 59, 1);
    color: #f1f5f9;
  }

  /* 成功态 */
  .copy-code-btn.success {
    color: #10b981; /* 绿色 */
    border-color: #10b981;
    background-color: rgba(16, 185, 129, 0.1);
  }
</style>
